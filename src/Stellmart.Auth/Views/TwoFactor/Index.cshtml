@model TwoFactorAuthenticationViewModel

<div class="login-page">
    <div class="page-header">
        <h1>Authenticate</h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">

            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Model.DisplayText</h3>
                    </div>
                    <div class="panel-body">

                        <form asp-controller="TwoFactor" asp-action="Index" method="post">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <input type="hidden" asp-for="Username" />

                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Code"></label>
                                    <input class="form-control" placeholder="Enter Code" asp-for="Code" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit" name="button" value="submit">Submit</button>
                                @if (Model.AllowResend)
                                {
                                    <button class="btn btn-default" type="submit" name="button" value="resend">Resend Code</button>
                                }
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>